{
  "name": "firewand",
  "version": "0.5.1",
  "description": "Firewand is a modular Firebase utility library for simplifying interactions with Firebase services such as Analytics, Auth, Firestore, Storage, and Stripe payments.",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/cjs/index.js",
      "import": "./dist/esm/index.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc --module commonjs --outDir dist/cjs",
    "build:esm": "tsc --module es2020 --outDir dist/esm",
    "start": "node dist/cjs/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "prepublishOnly": "npm run build",
    "ppublish": "npm run build && npm publish --access public"
  },
  "keywords": [
    "stripe",
    "firebase"
  ],
  "author": "Dragos Catalin (https://github.com/dragoscv)",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/dragoscv/firewand.git"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.1",
    "@types/react": "^19.0.10",
    "esbuild": "^0.24.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.6",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@firebase/auth": "^1.9.1",
    "@react-native-async-storage/async-storage": "^1.23.1",
    "btpay": "^0.2.0",
    "expo-constants": "^17.0.8",
    "tslib": "^2.8.1",
    "uuid": "^11.1.0"
  },
  "peerDependencies": {
    "firebase": "^11.3.1",
    "react": ">=16.8.0",
    "react-native": ">=0.59.0"
  }
}